+/* WASIX/WASI libc variants may not provide getlogin()/getlogin_r().
+ * Gnulib replacements can still reference these symbols, so provide
+ * weak stubs to keep linkage deterministic for cross builds. */
+#if defined(__wasi__)
+__attribute__((weak)) char *getlogin(void)
+{
+	errno = ENOSYS;
+	return NULL;
+}
+
+__attribute__((weak)) int getlogin_r(char *name, size_t namesize)
+{
+	if (name != NULL && namesize > 0)
+		name[0] = '\0';
+
+	return ENOSYS;
+}
+#endif
